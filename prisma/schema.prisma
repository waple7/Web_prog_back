generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  role      String
  createdAt DateTime  @default(now())
  posts     Post[]
  services  Service[]
  contacts Contact[]
}

model Service {
  id        Int       @id @default(autoincrement())
  title     String
  service   String
  role      String
  createdAt DateTime  @default(now())
  customer    User      @relation(fields: [userId], references: [id])
  userId  Int
}

model Post {
  id        Int       @id @default(autoincrement())
  title     String
  content   String
  role      String
  createdAt DateTime  @default(now())
  author    User      @relation(fields: [userId], references: [id])
  userId  Int
}

model Contact{
  id        Int       @id @default(autoincrement())
  email   String
  role      String
  createdAt DateTime  @default(now())
  author    User      @relation(fields: [userId], references: [id])
  userId  Int
}
